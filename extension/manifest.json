{
  "manifest_version": 3,
  "name": "Human Browser Bridge",
  "version": "0.1.0",
  "description": "Bridge daemon for controlling your logged-in Chrome tabs.",
  "icons": {
    "16": "icons/disconnected-16.png",
    "32": "icons/disconnected-32.png",
    "48": "icons/disconnected-48.png",
    "128": "icons/disconnected-128.png"
  },
  "permissions": [
    "debugger",
    "tabs",
    "storage",
    "activeTab"
  ],
  "host_permissions": [
    "http://127.0.0.1/*"
  ],
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "action": {
    "default_title": "Human Browser",
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/disconnected-16.png",
      "32": "icons/disconnected-32.png",
      "48": "icons/disconnected-48.png",
      "128": "icons/disconnected-128.png"
    }
  }
}
